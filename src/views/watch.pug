extends base.pug

block content
    div#videoContainer
        video(src="/"+video.fileUrl, width="800", height="650")
        div#videoControls
            button#play Play
            button#mute Mute
            input(type="range", step="0.05", value=0.5, min="0" max="1")#volume
            div
                span#currentTime 0:00
                span  /  
                span#totalTime 0:00
            div
                input(type="range", step="0.5", value=0, min="0")#timeline
            div
                button#fullScreen Full Screen

    //-
        div
            each hashtag in video.hashtags
                span #{hashtag} 
        p=video.description
        small=video.createdAt
        div
            small Uploaded by 
                a(href=`/users/${video.owner._id}`) #{video.owner.username} 
        if String(video.owner._id) === String(loggedInUser._id) 
            div
                a(href=`${video.id}/edit`) Edit Video &rarr;
                br
                a(href=`${video.id}/delete`) Delete Video &rarr;

block scripts
    script(src="/static/js/videoPlayer.js")